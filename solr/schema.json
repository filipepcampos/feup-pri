{
	"add-field-type": [
        {
            "name": "textField",
            "class": "solr.TextField",
            "analyzer":{
                "tokenizer":{
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class": "solr.ASCIIFoldingFilterFactory", "preserveOriginal":"true"},
                    {"class": "solr.LowerCaseFilterFactory"}
                ]
            }
        },
        {
            "name": "intField",
            "class": "solr.IntPointField"
        },
        {
            "name": "simpleTextField",
            "class": "solr.TextField"
        }
    ],
    "add-field": [
        {
            "name": "title",
            "type": "textField",
            "indexed": true
        },
        {
            "name": "authors",
            "type": "textField",
            "indexed": true,
            "multiValued": true
        },
        {
            "name": "rating",
            "type": "intField",
            "indexed": false
        },
        {
            "name": "ISBN",
            "type": "intField",
            "indexed": false
        },
        {
            "name": "url",
            "type": "simpleTextField",
            "indexed": false
        },
        {
            "name": "genres",
            "type": "textField",
            "indexed": true,
            "multiValued": true
        }
    ],
    "add-dynamic-field": [
        {
            "name": "*Count",
            "type": "intField",
            "indexed": true
        },
        {
            "name": "description*",
            "type": "textField",
            "indexed": true
        },
        {
            "name": "*.text",
            "type": "textField",
            "indexed": true,
            "multiValued": true
        },
        {
            "name": "*.tags",
            "type": "textField",
            "indexed": true,
            "multiValued": true
        },
        {
            "name": "*.likes",
            "type": "intField",
            "indexed": false,
            "multiValued": true
        },
        {
            "name": "genre*",
            "type": "textField",
            "indexed": true
        }
    ]
}
